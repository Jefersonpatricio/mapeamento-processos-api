# Copie este arquivo para .env e preencha os valores
# cp .env.example .env

# Banco de dados
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mapeamento_processos"

# Quando usar Docker, o host muda para o nome do serviço:
# DATABASE_URL="postgresql://postgres:postgres@postgres:5432/mapeamento_processos"

# JWT
JWT_SECRET="troque-esta-chave-por-algo-muito-secreto"
JWT_EXPIRES_IN="1d"

# Porta da API (opcional, padrão: 3000)
PORT=3000

# URL do frontend (para configuração de CORS)
FRONTEND_URL="http://localhost:3001"

# Credenciais do PostgreSQL (usadas pelo docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mapeamento_processos
